{
  "$schema": "https://schema.tauri.app/v2/config.json",
  "package": {
    "productName": "timelink",
    "version": "0.1.0"
  },
  "tauri": {
    "identifier": "com.timelink.app",
    "build": {
      "beforeDevCommand": "bun run dev",
      "beforeBuildCommand": "bun run build",
      "devPath": "http://localhost:1420",
      "distDir": "../dist"
    },
    "windows": [
      {
        "label": "main",
        "title": "timelink",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "updater",
        "title": "Checking for Updates...",
        "width": 400,
        "height": 200,
        "resizable": false,
        "center": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/<GITHUB_OWNER>/<REPO_NAME>/releases/latest/download/latest.json"
      ],
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "appimage", "msi", "dmg"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
